package src;

import java.util.Scanner;

public class reverseastring {
	public static void main(String args[])
	{
		Scanner sc=new Scanner(System.in);
		//String str=sc.nextLine();
		String str="hello sri world";
		sc.close(); 
		
	    String words[]=str.split("\\s");  //split after every space
	    String reverseWord=""; 
	    
	    for(int i=0;i<words.length;i++){  
	        StringBuilder sb=new StringBuilder(words[i]);  //taking each input from array and convt to string builder
	        sb.reverse();  
	        reverseWord+=sb+" ";   
	    }  
           System.out.println(reverseWord.trim());		
	}

}

